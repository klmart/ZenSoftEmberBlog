<div class="form-horizontal">
    <div class="form-group has-feedback {{if role.isValid 'has-success'}}">
        <label class="col-sm-2 control-label">Role*</label>
        <div class="col-sm-10">
          {{input type="text" value=role.name class="form-control" placeholder="Role name"}}
          {{#if role.isValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
        </div>
    </div>

    <div class="form-group has-feedback {{if role.isValid 'has-success'}}">
        <label class="col-sm-2 control-label">Permissions*</label>
        <div class="col-sm-10">
          {{#power-select-multiple
            options=permissions
            selected=permission
            placeholder="Select permission"
            onchange=(action "choosePermission" (mut ignore permissions))
          as |permission|
          }}
            {{permission.name}}
          {{/power-select-multiple}}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'buttonClicked' role}}>{{buttonLabel}}</button>
        </div>
    </div>
</div>