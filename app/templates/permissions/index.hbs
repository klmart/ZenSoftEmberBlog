<h2>Permissions</h2>
{{#link-to 'permissions.new' tagName="li"}}<a href="">Add new permission</a>{{/link-to}}

{{#each model as |permission|}}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{permission.name}}</h3>
            <h3 class="panel-title">{{permission.code}}</h3>
            <div class="text-right">
              {{#link-to 'permissions.edit' permission.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
                <button class="btn btn-danger btn-xs" {{action 'deletePermission' permission}}>Delete</button>
            </div>
        </div>
    </div>
{{/each}}