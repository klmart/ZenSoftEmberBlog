<div class="form-horizontal">
    <div class="form-group has-feedback {{if role.isValid 'has-success'}}">
        <label class="col-sm-2 control-label">Role*</label>
        <div class="col-sm-10">
          {{input type="text" value=role.name class="form-control" placeholder="Role name"}}
          {{#if role.isValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Blog Type</label>
      {{#power-select
        selected=permission
        placeholder="Please, select one destination"
        options=permissions
        onchange=(action "choosePermission")
      as |permission|
      }}
        {{permission.name}}
      {{/power-select}}
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'buttonClicked' role}}>{{buttonLabel}}</button>
        </div>
    </div>
</div>