<table class="table table-bordered">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Registered</th>
        <th>Last login date</th>
        <th>Blogs</th>
        <th>Roles</th>
        <th>Actions</th>
    </tr>
    </thead>

    <tbody>
    {{#each item as |user|}}
        <tr>
            <td>{{user.firstName}}</td>
            <td>{{user.lastName}}</td>
            <td>{{user.email}}</td>
            <td>{{user.registrationMoment}}</td>
            <td>{{user.lastLoginMoment}}</td>
            <td>{{#link-to 'blogs.index' (query-params sortParam=user.id)}} {{user.blogsCount}}{{/link-to}}</td>
            <td> {{#power-select
              selected=user.role
              placeholder="Role"
              options=roles
              onchange=(action "chooseRole" user role)
            as |role|
            }}
              {{role.name}}
            {{/power-select}}
            </td>
            <th>{{#link-to 'users.edit' user.id class='btn btn-success btn-xs'}}Edit{{/link-to}}</th>
        </tr>
    {{/each}}
    </tbody>
</table>
