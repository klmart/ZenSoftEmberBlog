<h2>Add a new Post</h2>

<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
          {{input type="text" value=model.title class="form-control" placeholder="Название поста"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Content</label>
        <div class="col-sm-10">
          {{input type="text" value=model.content class="form-control" placeholder="Введите контент"}}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'savePost' model}}>Add to post list</button>
        </div>
    </div>
</div>