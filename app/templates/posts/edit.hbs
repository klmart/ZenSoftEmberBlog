<h2>Edit Post</h2>

<div class="form-horizontal">

    <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
          {{input type="text" value=model.title class="form-control" placeholder="The name of the post"}}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
          {{input type="text" value=model.content class="form-control" placeholder="The address of the Post"}}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'savePost' model}}>Save changes</button>
        </div>
    </div>

</div>