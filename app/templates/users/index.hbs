<table class="table table-bordered">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Registered</th>
        <th>Last login date</th>
        <th>Blogs</th>
        <th>Actions</th>
    </tr>
    </thead>

    <tbody>
    {{#each model as |user|}}

        <tr>
            <th>{{user.firstName}}</th>
            <th>{{user.lastName}}</th>
            <th>{{user.email}}</th>
            <th>{{user.registrationMoment}}</th>
            <th>{{user.lastLoginMoment}}</th>
            <th>{{user.blogsCount}}</th>
            <th>{{#link-to 'users.edit' user.id class='btn btn-success btn-xs'}}Edit{{/link-to}}</th>
        </tr>
    {{/each}}
    </tbody>
</table>