<h2>Comments</h2>
<div class="row">
  {{#each model.comments as |comment|}}
      <div class="col-md-4">
          <div class="panel panel-default library-item">
              <div class="panel-heading">
              </div>
              <div class="panel-body">
                  <p>Автор: {{comment.user.email}}</p>
                  <p>Comment: {{comment.body}}</p>
              </div>
              <div class="panel-footer text-right">
                {{#if comment.checkUser}}
                  {{#link-to 'comments.edit' comment.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
                    <button class="btn btn-danger btn-xs" {{action 'deleteComment' comment}}>Delete</button>
                {{/if}}
              </div>
          </div>
      </div>
  {{/each}}
</div>