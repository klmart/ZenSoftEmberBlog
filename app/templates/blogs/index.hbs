<div class="row">
  {{#each model as |blog|}}
      <div class="col-md-4">
          <div class="panel panel-default blog-item">
              <div class="panel-heading">
                {{#link-to 'posts' blog.id }}{{blog.name}}{{/link-to}}
              </div>
              <div class="panel-body">
                  <p>Address: {{blog.description}}</p>
              </div>
              <div class="panel-footer text-right">
                {{#link-to 'blogs.edit' blog.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
                  <button class="btn btn-danger btn-xs" {{action 'deleteBlog' blog}}>Delete</button>
              </div>
          </div>
      </div>
  {{/each}}
</div>